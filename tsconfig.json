{
    "compilerOptions": {
        "lib": ["es2019"],
        "module": "umd",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "preserveConstEnums": true,
        "skipLibCheck": true,
        "strict": true,
        "target": "es2019",
        "outDir": "dist"
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
}
